<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                tools:context="com.csatimes.dojma.DownloadForFirstTimeActivity">


    <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        app:cfl_border="true"
        app:cfl_border_width="5dp"
        app:cfl_progress="0"
        app:cfl_wave_amplitude="0.06"
        app:cfl_wave_color="@color/facebook_primary"/>


    <TextView
        android:id="@+id/downloading_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progressBar"
        android:text="Please wait while the articles are downloaded ..."/>

    <Button
        android:id="@+id/retry_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/downloading_textview"
        android:text="Retry download"
        android:visibility="invisible"/>

</RelativeLayout>
