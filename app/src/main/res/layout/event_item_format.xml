<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/events_format_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events_format_status"
        android:layout_toLeftOf="@+id/events_format_add"
        android:layout_toStartOf="@+id/events_format_add"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="2dp"
        android:text="Event name"
        android:textSize="20sp"
        app:paddingEnd="8dp"/>

    <TextView
        android:id="@+id/events_format_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/events_format_time"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/events_format_add"
        android:layout_toStartOf="@+id/events_format_add"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:text="Event details"
        android:textSize="14sp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/events_format_description"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:alpha="0.5"
        android:background="@color/grey500"/>

    <ImageButton
        android:id="@+id/events_format_add"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/events_format_description"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_add_black_24dp"/>

    <TextView
        android:id="@+id/events_format_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/events_format_add"
        android:layout_toStartOf="@+id/events_format_add"
        android:gravity="bottom|start"
        android:padding="4dp"
        android:text="STATUS"
        android:textAllCaps="true"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/events_format_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/events_format_location"
        android:layout_toLeftOf="@+id/events_format_add"
        android:paddingEnd="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:text="DateTime"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/events_format_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/events_format_title"
        android:layout_toLeftOf="@+id/events_format_add"
        android:layout_toStartOf="@+id/events_format_add"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:text="Location if any"
        android:textSize="15sp"/>
</RelativeLayout>
