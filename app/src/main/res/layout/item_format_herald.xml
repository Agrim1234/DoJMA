<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/herald_parent_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="4dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="16dp"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/herald_rv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/herald_rv_item_image"
        android:layout_toStartOf="@+id/herald_rv_item_image"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="14dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/herald_rv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/herald_rv_item_title"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Date"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/herald_rv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/herald_rv_item_date"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/herald_rv_item_image"
        android:layout_toStartOf="@+id/herald_rv_item_image"
        android:maxLines="2"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:text=""
        android:textColor="@color/black"/>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/herald_rv_item_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/herald_rv_item_title"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        app:roundAsCircle="true"
        app:roundedCornerRadius="1dp"
        app:roundingBorderColor="@color/white"/>

    <com.like.LikeButton
        android:id="@+id/herald_like_button"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/herald_rv_item_image"
        android:layout_alignStart="@+id/herald_rv_item_image"
        android:layout_below="@+id/herald_rv_item_image"
        android:layout_marginTop="16dp"
        app:anim_scale_factor="3.5"
        app:circle_end_color="@color/likeCircleEnd"
        app:circle_start_color="@color/likeCircleStart"
        app:dots_primary_color="@color/likeDotsColorPrimary"
        app:dots_secondary_color="@color/likeDotsColorSecondary"
        app:icon_size="25dp"
        app:icon_type="heart"
        app:is_enabled="true"
        app:liked="false"/>

    <ImageButton
        android:id="@+id/herald_rv_share_button"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/herald_like_button"
        android:layout_toEndOf="@+id/herald_like_button"
        android:layout_toRightOf="@+id/herald_like_button"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_share"/>

</RelativeLayout>

