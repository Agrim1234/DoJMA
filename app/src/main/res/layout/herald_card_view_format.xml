<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/herald_parent_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginRight="2dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="8dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="16dp"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/herald_rv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/herald_rv_item_title"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Date"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/herald_rv_desc"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/herald_rv_item_date"
            android:layout_toLeftOf="@+id/herald_rv_item_image"
            android:layout_toStartOf="@+id/herald_rv_item_image"
            android:maxLines="3"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Desc"/>

        <TextView
            android:id="@+id/herald_rv_item_author"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/herald_rv_desc"
            android:layout_toLeftOf="@+id/herald_rv_item_image"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Article Author from Dojma"
            android:textSize="16sp"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/herald_rv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/herald_rv_item_image"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="24sp"/>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/herald_rv_item_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="27dp"

            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundWithOverlayColor="@color/white"
            fresco:roundedCornerRadius="50dp"
            fresco:roundingBorderColor="@android:color/transparent"
            fresco:roundingBorderWidth="1dp"/>

        <com.like.LikeButton
            android:id="@+id/herald_like_button"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/herald_rv_item_author"
            android:layout_below="@+id/herald_rv_desc"
            android:layout_toEndOf="@+id/herald_rv_item_author"
            android:layout_toRightOf="@+id/herald_rv_item_author"
            app:anim_scale_factor="3.5"
            app:circle_end_color="@color/likeCircleEnd"
            app:circle_start_color="@color/likeCircleStart"
            app:dots_primary_color="@color/likeDotsColorPrimary"
            app:dots_secondary_color="@color/likeDotsColorSecondary"
            app:icon_size="20dp"
            app:icon_type="heart"
            app:is_enabled="true"
            app:liked="false"/>

        <ImageButton
            android:id="@+id/herald_rv_share_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/herald_like_button"
            android:layout_alignTop="@+id/herald_like_button"
            android:layout_below="@+id/herald_rv_desc"
            android:layout_toEndOf="@+id/herald_like_button"
            android:layout_toRightOf="@+id/herald_like_button"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_share"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>