<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="8dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="16dp"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/herald_rv_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/no_image_info"

            />

        <TextView
            android:id="@+id/herald_rv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/herald_rv_item_image"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/herald_rv_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/herald_rv_item_date"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="Author"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <ProgressBar
            android:id="@+id/loadingImage"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:indeterminate="true"/>

        <TextView
            android:id="@+id/herald_rv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/herald_rv_item_title"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Date"
            android:textSize="14sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_below="@id/herald_rv_item_image"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>