<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_offline_simple_viewer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackgroundBorderless"

    tools:context="com.csatimes.dojma.OfflineSimpleViewer"
    tools:showIn="@layout/activity_offline_simple_viewer">


    <TextView
        android:id="@+id/offline_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"/>


    <TextView
        android:id="@+id/offline_article"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/offline_article_author"
        android:gravity="left"
        android:padding="8dp"
        android:text=""
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/offline_article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offline_article_title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Author"
        android:textSize="14sp"
        android:textStyle="italic"
        android:typeface="sans"/>
</RelativeLayout>
