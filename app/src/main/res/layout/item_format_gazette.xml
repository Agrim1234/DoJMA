<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?defaultBackground"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:stateListAnimator="@animator/lift_on_touch"
    app:targetApi="lollipop">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:stateListAnimator="@animator/lift_on_touch"
        card_view:cardElevation="8dp"
        card_view:theme="@style/AlertDialog.AppCompat">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_format_gazette_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@color/grey500" />


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/item_format_gazette_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Gazette"
        android:textColor="?attr/customGazetteTitleTextColor"
        android:textSize="16sp" />

</LinearLayout>
