<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/herald_parent_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?defaultBackground"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="4dp"
    android:stateListAnimator="@animator/lift_on_touch"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/search_herald_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/search_herald_image"
        android:layout_toStartOf="@+id/search_herald_image"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="14dp"
        android:text="Title"
        android:textColor="?customHeraldTitleTextColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/search_herald_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_herald_title"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Date"
        android:textColor="?customHeraldDateTextColor"
        android:textSize="12sp" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/search_herald_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/search_herald_title"
        android:layout_centerVertical="true"
        android:padding="8dp"
        app:roundedCornerRadius="1dp" />

</RelativeLayout>

