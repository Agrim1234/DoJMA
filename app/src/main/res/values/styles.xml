<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="customNavDrawerTitleTextColor">@color/grey800</item>
        <item name="customNavDrawerIconTintColor">@color/grey700</item>

        <item name="customHeraldTitleTextColor">@color/black</item>
        <item name="customHeraldDescTextColor">@color/grey700</item>
        <item name="customHeraldDateTextColor">@color/grey500</item>

        <item name="customGazetteTitleTextColor">@color/black</item>

        <item name="customEventsTitleTextColor">@color/black</item>
        <item name="customEventsLocationTextColor">@color/black</item>
        <item name="customEventsDescTextColor">@color/grey800</item>
        <item name="customEventsTimeTextColor">@color/grey800</item>
        <item name="customEventsDateTextColor">@color/black</item>
        <item name="customEventsViewColor">@color/grey500</item>

        <item name="customSearchableErrorTextColor">@color/grey700</item>


    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/grey900</item>
        <item name="colorPrimaryDark">@color/grey900</item>

        <item name="customNavDrawerTitleTextColor">@color/grey400</item>
        <item name="customNavDrawerIconTintColor">@color/grey400</item>

        <item name="customHeraldTitleTextColor">@color/grey400</item>
        <item name="customHeraldDescTextColor">@color/grey600</item>
        <item name="customHeraldDateTextColor">@color/grey500</item>

        <item name="customGazetteTitleTextColor">@color/white</item>

        <item name="customEventsTitleTextColor">@color/white</item>
        <item name="customEventsLocationTextColor">@color/grey500</item>
        <item name="customEventsDescTextColor">@color/grey700</item>
        <item name="customEventsTimeTextColor">@color/grey500</item>
        <item name="customEventsDateTextColor">@color/grey500</item>
        <item name="customEventsViewColor">@color/grey700</item>

        <item name="customSearchableErrorTextColor">@color/grey700</item>
        <item name="customLinksTitleTextColor">@color/grey400</item>
        <item name="customLinksLinkTextColor">@color/grey600</item>

        <item name="customContactsNameTextColor">@color/grey400</item>
        <item name="colorControlHighlight">@color/grey700</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomToolbar">
        <item name="android:id">@id/offline_toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="CustomToolbar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="MaterialSearchViewStyleCustom">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/materialSearchBackground</item>

        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/ic_voice_search</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_clear</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_arrow_back</item>

        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/black</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/grey500</item>

        <!-- Hint for edit text -->
        <item name="android:hint">Search all</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/alert_dialog_background</item>
        <item name="android:textColor">@color/alert_dialog_text_color</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CallButtonColorControlHighlight" parent="AppTheme">
        <item name="colorControlHighlight">@color/call_button_color</item>
    </style>

    <style name="EmailButtonColorControlHighlight" parent="AppTheme">
        <item name="colorControlHighlight">@color/mail_button_color</item>
    </style>

    <style name="MainCallButtonColorControlHighlight" parent="AppTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>


</resources>
